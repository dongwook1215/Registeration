<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_keyboard_backspace_black_24dp"
                android:foreground="?attr/selectableItemBackground" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="결제"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <ImageButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_exit_to_app_black_24dp"
                android:foreground="?attr/selectableItemBackground" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/announce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/bank"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/textColor"></Spinner>
        <EditText
            android:id="@+id/banknumber"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="계좌번호를 입력해주세요"
            android:background="@color/textColor"></EditText>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/bankpassword"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorStrongGray"
            android:hint="카드 비밀번호 4자리를 입력해주세요"/>
        <TextView
            android:id="@+id/thingsname"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorStrongGray" />
        <TextView
            android:id="@+id/thingswhere"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorStrongGray" />
        <TextView
            android:id="@+id/thingswhen"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorStrongGray" />
        <TextView
            android:id="@+id/thingscontent"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorStrongGray" />
        <TextView
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorWarning"
            android:text="총 결제 금액"/>
        <TextView
            android:id="@+id/thingsmoney"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:gravity="center|right"
            android:textColor="@color/colorWarning" />

        <Button
            android:id="@+id/paybutton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="결제"
            android:layout_marginTop="15dp"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>