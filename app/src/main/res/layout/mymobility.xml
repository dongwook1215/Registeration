<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="모빌리티 이름"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:id="@+id/mobilityname"
            android:drawableStart="@drawable/ic_directions_bike_black_24dp"
            android:drawableLeft="@drawable/ic_directions_bike_black_24dp"
            android:background="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="대여번호"
            android:layout_gravity="center"
            android:padding="3dp"
            android:layout_marginLeft="8dp"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:id="@+id/mobilityid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="물품 대여 장소"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:id="@+id/mobilitywhere"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="물품 대여 기간"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:id="@+id/mobilitywhen"/>

    </LinearLayout>
</LinearLayout>